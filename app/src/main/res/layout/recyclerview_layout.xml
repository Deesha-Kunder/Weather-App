<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="150dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="10dp"
    android:background="@android:color/transparent"
    app:cardCornerRadius="10dp"
    app:cardElevation="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/light_purple">

        <TextView
            android:id="@+id/idTvRvTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Time"
            android:padding="2dp"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/idTvRvTemperature"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="20"
            android:padding="2dp"
            android:gravity="center"
            android:layout_below="@+id/idTvRvTime"
            android:textColor="@color/black"/>
        <ImageView
            android:id="@+id/idIvRvImage"
            android:layout_width="match_parent"
            android:layout_height="111dp"
            android:layout_centerInParent="true"
            android:src="@mipmap/ic_launcher"
            android:layout_below="@+id/idTvRvTemperature"/>
        <TextView
            android:id="@+id/idTvRvWindSpeed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/idIvRvImage"
            android:text="13"
            android:gravity="center"
            android:textColor="@color/black"
            android:padding="2dp"/>
    </RelativeLayout>

</androidx.cardview.widget.CardView>
